<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head.partial.ejs', {title: 'Notes'}) %>
</head>

<body>

    <div class="container-fluid p-3">

        <h2>Notes <% if (locals.author) { %> by <%= author %> <% } %> </h2>

        <div class="d-flex flex-wrap gap-3">

            <% for (var i=0; i < notes.length;  i++ ) { %>

            <div class="card" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title"><%= notes[i].title  %></h5>
                    <h6 class="card-subtitle mb-2 text-muted"><%= notes[i].author  %></h6>
                    <p class="card-text"><%= notes[i].text  %></p>
                </div>
            </div>

            <% } %>

        </div>

    </div>


</body>

</html>